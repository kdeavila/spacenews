---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "@fontsource-variable/figtree";
import Header from "@components/Header.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Descubre las últimas noticias y novedades de SpaceX. Mantente al día con sus misiones, lanzamientos y avances tecnológicos."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="../src/styles/global.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-background text-neutral-100">
		<Header />
		<slot />
	</body>
</html>
